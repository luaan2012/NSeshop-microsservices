@using NS.Core.Communication
@model CartViewModel
@{
    var address = TempData["address"] as AddressViewModel;
}

<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a asp-controller="Store" asp-action="Index" class="stext-109 cl8 hov-cl1 trans-04">
            Loja
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Carrinho
        </span>
    </div>
</div>

<!-- Shoping Cart -->
<form class="bg0 p-t-75 p-b-85">
    <div class="container">
        <div class="row">
            <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                <div class="m-l-25 m-r--38 m-lr-0-xl">
                    <div class="wrap-table-shopping-cart">
                        <table class="table-shopping-cart">
                            <tr class="table_head">
                                <th class="column-1">Produto</th>
                                <th class="column-2"></th>
                                <th class="column-5">Preço</th>
                                <th class="column-4">Quantidade</th>
                                <th class="column-5">Total</th>
                                <th class="column-3"></th>
                            </tr>

                            @foreach (var product in Model.Items)
                            {
                                <tr class="table_row">
                                    <td class="column-1">
                                        <div class="how-itemcart1">
                                            <img src="~/images/@product.Image" alt="IMG">
                                        </div>
                                    </td>
                                    <td class="column-2">@product.Name</td>
                                    <td class="column-5">@this.FormatCoin(product.Value)</td>
                                    <td class="column-4">
                                        <div class="wrap-num-product flex-w m-l-auto m-r-0">
                                            <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-minus"></i>
                                            </div>

                                            <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="@product.Quantity">

                                            <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                <i class="fs-16 zmdi zmdi-plus"></i>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="column-5">@this.ValueTotalByUnity(product.Quantity, product.Value)</td>
                                    <td class="column-3" style="cursor:pointer" onclick="updateCart(this, '@product.ProductId')"><i class="fa-solid fa-rotate"></i></td>
                                </tr>
                            }

                        </table>
                    </div>

                    <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">

                        @if (Model.VoucherUsed)
                        {
                            <small class="text-success">Voucher usado: @Model.Voucher.Code <i class="fa-sharp fa-solid fa-xmark" style="cursor:pointer" onclick="removeVoucher('@Model.Voucher.Code')"></i></small>
                        }

                        <div class="flex-w flex-m m-r-20 m-tb-5">
                            <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" id="voucherCode" name="voucherCode" placeholder="Cupom desconto">

                            <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5" onclick="applyVoucher(document.getElementById('voucherCode').value)">
                                APLICAR DESCONTO
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                    <h4 class="mtext-109 cl2 p-b-30">
                        Total carrinho
                    </h4>

                    <div class="flex-w flex-t bor12 p-b-13">
                        <div class="size-208">
                            <span class="stext-110 cl2">
                                Subtotal:
                            </span>
                        </div>

                        <div class="size-209">
                            <span class="mtext-110 cl2">
                                @this.FormatCoin(Model.Discount + Model.ValueTotal)
                            </span>
                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                Endereço:
                            </span>
                        </div>

                        <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">

                            @if (address is not null)
                            {
                                <p class="stext-111 cl6 p-t-2">
                                    @address.ToString()
                                </p>

                                <div class="p-t-15">

                                    <div class="flex-w">
                                        <div class="flex-c-m stext-101 cl2 size-115 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer" data-toggle="modal" data-target="#registerModal">
                                            Editar
                                        </div>
                                    </div>

                                </div>
                            }
                            else
                            {
                                <p class="stext-111 cl6 p-t-2">
                                    Você não possui endereço
                                </p>

                                <div class="p-t-15">

                                    <div class="flex-w">
                                        <div class="flex-c-m stext-101 cl2 size-115 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer" data-toggle="modal" data-target="#registerModal">
                                            Adicionar
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>
                    </div>

                    <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                        <div class="size-208 w-full-ssm">
                            <span class="stext-110 cl2">
                                Custo envio:
                            </span>
                        </div>

                        <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                            <span class="mtext-110 cl2">
                                R$ 50.00
                            </span>
                        </div>
                    </div>

                    <div class="flex-w flex-t p-t-27 p-b-33">
                        <div class="size-208">
                            <span class="mtext-101 cl2">
                                Total desconto:
                            </span>
                        </div>

                        <div class="size-209 p-t-1">
                            <span class="mtext-110 cl2 text-success">
                                @this.FormatCoin(Model.ValueTotal)
                            </span>
                        </div>
                    </div>

                    <button class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                        Seguir para o pagamento
                    </button>
                </div>
            </div>
        </div>
    </div>
</form>