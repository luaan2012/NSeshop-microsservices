@model NS.WebMVC.Models.UserRegister

@{
    Layout = null;
}

<link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
<link rel="stylesheet" type="text/css" href="~/vendor/bootstrap/css/bootstrap.min.css">
<link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
<link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/animate/animate.css">
<link rel="stylesheet" type="text/css" href="~/vendor/css-hamburgers/hamburgers.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/animsition/css/animsition.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/select2/select2.min.css">
<link rel="stylesheet" type="text/css" href="~/vendor/daterangepicker/daterangepicker.css">
<link rel="stylesheet" type="text/css" href="~/css/registerUtil.css">
<link rel="stylesheet" type="text/css" href="~/css/register.css?@DateTime.Now">

<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100">
            <form class="login100-form validate-form" asp-controller="Identity" asp-action="Register" method="post">
                <vc:Summary />

                <span class="login100-form-title p-b-43">
                    Faça seu cadastro
                </span>

                <div class="wrap-input100 validate-input" data-validate="O nome é obrigatório">
                    <input asp-for="Name" class="input100" type="text" name="name">
                    <span class="focus-input100"></span>
                    <span class="label-input100">Nome Completo</span>

                </div>
                @*<span asp-validation-for="Name" class="text-danger"></span>*@

                <div class="form-row">
                    <div class="form-group col-md-7">
                        <div class="wrap-input100 validate-input" data-validate="E-mail é obrigatório: example@gmail.com">
                            <input asp-for="Email" class="input100" type="text" name="email">
                            <span class="focus-input100"></span>
                            <span class="label-input100">E-mail</span>

                        </div>
                        @*<span asp-validation-for="Email" class="text-danger"></span>*@
                    </div>
                    <div class="form-group col-md-5">
                        <div class="wrap-input100 validate-input" data-validate="Insira um CPF válido: 000.000.00-00">
                            <input asp-for="Cpf" class="input100 cpf" type="text" name="cpf">
                            <span class="focus-input100"></span>
                            <span class="label-input100">CPF</span>

                        </div>
                        @*<span asp-validation-for="Cpf" class="text-danger"></span>*@
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group col-md-6">

                        <div class="wrap-input100 validate-input" data-validate="Senha é obrigatório">
                            <input asp-for="Password" class="input100" type="password" name="password">
                            <span class="focus-input100"></span>
                            <span class="label-input100">Senha</span>

                        </div>
                        @*<span asp-validation-for="Password" class="text-danger"></span>*@
                    </div>

                    <div class="form-group col-md-6">
                        <div class="wrap-input100 validate-input" data-validate="Confirmar Senha é obrigatório">
                            <input asp-for="PasswordConfirm" class="input100" type="password" name="passwordConfirm">
                            <span class="focus-input100"></span>
                            <span class="label-input100">Confirmar senha</span>
                        </div>
                        @*<span asp-validation-for="PasswordConfirm" class="text-danger"></span>*@
                    </div>
                </div>


                <div class="flex-sb-m w-full p-t-3 p-b-32">
                    <div class="contact100-form-checkbox" onclick="window.location = '/?login=true'">
                        <input class="input-checkbox100" id="ckb1" type="checkbox" name="remember-me">
                        <a href="#" class="txt1">
                            Já possui cadastro?
                        </a>
                    </div>

                    <div>
                        <a href="javascript:void(0)" class="txt1">
                            Esqueceu a senha?
                        </a>
                    </div>
                </div>


                <div class="container-login100-form-btn">
                    <button class="login100-form-btn" type="submit">
                        Entrar
                    </button>
                </div>

                <div class="text-center p-t-46 p-b-20">
                    <span class="txt2">
                        ou faça seu login
                    </span>
                </div>

                <div class="login100-form-social flex-c-m">
                    <a href="#" class="login100-form-social-item flex-c-m bg1 m-r-5">
                        <i class="fa fa-facebook-f" aria-hidden="true"></i>
                    </a>

                    <a href="#" class="login100-form-social-item flex-c-m bg2 m-r-5">
                        <i class="fa fa-twitter" aria-hidden="true"></i>
                    </a>
                </div>
            </form>

            <div class="login100-more" style="background-image: url('/images/bg-register.jpg');">
            </div>
        </div>
    </div>
</div>

<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/js/jquery.mask.js"></script>
<script src="~/vendor/animsition/js/animsition.min.js"></script>
<script src="~/vendor/bootstrap/js/popper.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/vendor/select2/select2.min.js"></script>
<script src="~/vendor/daterangepicker/moment.min.js"></script>
<script src="~/vendor/daterangepicker/daterangepicker.js"></script>
<script src="~/vendor/countdowntime/countdowntime.js?"></script>
<script src="~/js/register.js?@DateTime.Now.Ticks"></script>

<script>
    (function($){
        $('.cpf').mask('000.000.000-00', {reverse: true});
    }(jQuery));
</script>