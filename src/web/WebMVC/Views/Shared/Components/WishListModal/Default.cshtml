@model WishListViewModel

<!-- Cart -->
<div class="wrap-header-cart js-panel-wish header-v4">
    <div class="s-full js-hide-wish"></div>

    <div class="header-cart flex-col-l p-l-65 p-r-25">
        <div class="header-cart-title flex-w flex-sb-m p-b-8">
            <span class="mtext-103 cl2">
                Sua Lista de desejos
            </span>

            <div class="fs-35 lh-10 cl2 p-lr-5 pointer hov-cl1 trans-04 js-hide-wish">
                <i class="zmdi zmdi-close"></i>
            </div>
        </div>

        @if(Model.Items.Any())
        {
            <div class="header-cart-content flex-w js-pscroll">
                <ul class="header-cart-wrapitem w-full" style="padding-left: 0rem!important">
                
                        @foreach (var product in Model.Items)
                        {
                            <li class="header-cart-item flex-w flex-t m-b-12">
                                <div class="header-cart-item-img" onclick="removeItemWishList('@product.ProductId')">
                                    <img src="~/images/@product.Image" alt="IMG">
                                </div>

                                <div class="header-cart-item-txt p-t-8">
                                    <a href="javascript:void(0)" onclick="openModal('@product.ProductId')" class="header-cart-item-name m-b-18 hov-cl1 trans-04">
                                        @product.Name
                                    </a>
                                </div>
                            </li>
                        }
                </ul>

                <div class="w-full">

                    <div class="header-cart-buttons flex-w w-full">
                        <form asp-action="RemoveWishList" asp-controller="WishList" method="post" id="removeWishList">
                            <a href="javascript:void(0)" onClick="document.getElementById('removeWishList').submit();" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-r-8 m-b-10">
                                Limpar
                            </a>
                        </form>

                        <a href="javascript:void(0)" onclick="$('.js-panel-wish').removeClass('show-header-cart');" class="flex-c-m stext-101 cl0 size-107 bg3 bor2 hov-btn3 p-lr-15 trans-04 m-b-10">
                            Ver Loja
                        </a>

                    </div>
                </div>
        </div>
        }
         else
        {
           <small class="text-danger">Sua lista de desejos está vazio</small>
        }
    </div>
</div>